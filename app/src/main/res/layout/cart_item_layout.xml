<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/linearTextViewsOFCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartProdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="product name"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cartProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=" Price"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/linearButtonsForIncDec"
        android:layout_toRightOf="@id/linearTextViewsOFCart"
        android:text="0" />
    <LinearLayout
        android:id="@+id/linearButtonsForIncDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/linearTextViewsOFCart"
        android:foregroundGravity="right"

        android:gravity="right"
        android:orientation="vertical">



        <Button
            android:id="@+id/btnIncItem"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="+"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDecrItem"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="-"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>